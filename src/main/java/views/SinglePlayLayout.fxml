<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="singlePlayPage" prefHeight="700.0"
	prefWidth="1300.0"
	style="-fx-background-image: url(/resources/tetris.jpg); -fx-background-size: cover; -fx-background-position: center center;"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="views.SinglePlayController">
	<children>
		<Canvas height="300.0" layoutX="950.0" layoutY="150.0"
			width="300.0" />
		<Pane layoutX="44.0" layoutY="118.0" prefHeight="300.0"
			prefWidth="268.0"
			style="-fx-background-color: linear-gradient(to bottom, #353535, #ffffff); -fx-background-radius: 47px; -fx-border-width: 10px; -fx-border-color: rgb(255,255,255); -fx-border-radius: 40px;">
			<children>
				<Label alignment="CENTER" layoutX="-16.0" layoutY="14.0"
					prefHeight="50.0" prefWidth="300.0" text="HOLD" textFill="WHITE">
					<font>
						<Font name="Arial Bold" size="36.0" />
					</font>
				</Label>
				<Pane layoutX="34.0" layoutY="64.0" prefHeight="200.0"
					prefWidth="200.0"
					style="-fx-background-color: rgb(25,25,25); -fx-background-radius: 20px;">
					<children>
						<Canvas fx:id="holdCanvas" height="200.0" width="200.0" />
					</children>
				</Pane>
			</children>
		</Pane>
		<Pane layoutX="982.0" layoutY="111.0" prefHeight="300.0"
			prefWidth="268.0"
			style="-fx-background-color: linear-gradient(to bottom, #353535, #ffffff); -fx-background-radius: 47px; -fx-border-width: 10px; -fx-border-color: rgb(255,255,255); -fx-border-radius: 40px;">
			<children>
				<Label alignment="CENTER" layoutX="-16.0" layoutY="14.0"
					prefHeight="50.0" prefWidth="300.0" text="NEXT" textFill="WHITE">
					<font>
						<Font name="Arial Bold" size="36.0" />
					</font>
				</Label>

				<Pane layoutX="34.0" layoutY="64.0" prefHeight="200.0"
					prefWidth="200.0"
					style="-fx-background-color: rgb(25,25,25); -fx-background-radius: 20px;">
					<children>
						<Canvas fx:id="nextCanvas" height="200.0" width="200.0" />
					</children>
				</Pane>
			</children>
		</Pane>
		<Pane layoutX="44.0" layoutY="521.0" prefHeight="156.0"
			prefWidth="268.0"
			style="-fx-background-color: linear-gradient(to bottom, #353535, #ffffff); -fx-background-radius: 47px; -fx-border-width: 10px; -fx-border-color: rgb(255,255,255); -fx-border-radius: 40px;">
			<children>
				<Label alignment="CENTER" layoutX="-16.0" layoutY="14.0"
					prefHeight="50.0" prefWidth="300.0" text="SCORE" textFill="WHITE">
					<font>
						<Font name="Arial Bold" size="36.0" />
					</font>
				</Label>
				<Pane layoutX="34.0" layoutY="64.0" prefHeight="66.0"
					prefWidth="200.0"
					style="-fx-background-color: rgb(25,25,25); -fx-background-radius: 20px;">
					<children>
						<Label fx:id="lblScore" alignment="CENTER" layoutY="8.0"
							prefHeight="50.0" prefWidth="200.0" textFill="WHITE">
							<font>
								<Font name="Arial Bold" size="36.0" />
							</font>
						</Label>
					</children>
				</Pane>
			</children>
		</Pane>
		<Canvas fx:id="canvas" height="697.0" layoutX="500.0"
			layoutY="-10.0" width="292.0" />
		<Pane layoutX="495.0" layoutY="108.0" prefHeight="581.0"
			prefWidth="301.0"
			style="-fx-border-color: rgb(0,0,0); -fx-border-width: 8px; -fx-border-radius: 10px;" />
		<Label alignment="CENTER" prefHeight="108.0" prefWidth="1300.0"
			style="-fx-background-color: rgb(255,255,255);" text="SINGLE PLAY">
			<font>
				<Font name="Arial Bold" size="50.0" />
			</font>
		</Label>
		<Label fx:id="readyLabel" alignment="CENTER" prefHeight="800.0"
			prefWidth="1300.0" textFill="WHITE">
			<font>
				<Font name="Arial Bold" size="96.0" />
			</font>
		</Label>
		<VBox fx:id="pauseBox" alignment="CENTER" layoutX="7.0"
			opacity="0.0" prefHeight="200.0" prefWidth="100.0" spacing="30.0"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="7.0"
			AnchorPane.rightAnchor="-7.0" AnchorPane.topAnchor="0.0">
			<children>
				<Button fx:id="resumeBtn" mnemonicParsing="false"
					onMouseClicked="#resume" onMouseEntered="#hoverSound"
					prefHeight="50.0" prefWidth="220.0"
					style="-fx-background-color: rgb(71,200,62); -fx-border-radius: 16px;"
					text="RESUME" textFill="WHITE">
					<font>
						<Font name="Arial Bold" size="27.0" />
					</font>
				</Button>
				<Button fx:id="reStartBtn" mnemonicParsing="false"
					onMouseClicked="#reStart" onMouseEntered="#hoverSound"
					prefHeight="50.0" prefWidth="220.0"
					style="-fx-background-color: rgb(71,200,62); -fx-border-radius: 16px;"
					text="RESTART" textFill="WHITE">
					<font>
						<Font name="Arial Bold" size="27.0" />
					</font>
				</Button>
				<Button fx:id="optionBtn" mnemonicParsing="false"
					onMouseClicked="#option" onMouseEntered="#hoverSound"
					prefHeight="50.0" prefWidth="220.0"
					style="-fx-background-color: rgb(60,60,60); -fx-border-radius: 16px;"
					text="OPTION" textFill="WHITE">
					<font>
						<Font name="Arial Bold" size="27.0" />
					</font>
				</Button>
				<Button fx:id="exitBtn" mnemonicParsing="false"
					onMouseClicked="#exit" onMouseEntered="#hoverSound"
					prefHeight="50.0" prefWidth="220.0"
					style="-fx-background-color: rgb(200,10,10); -fx-border-radius: 16px;"
					text="EXIT" textFill="WHITE">
					<font>
						<Font name="Arial Bold" size="27.0" />
					</font>
				</Button>
			</children>
		</VBox>
	</children>
</AnchorPane>
